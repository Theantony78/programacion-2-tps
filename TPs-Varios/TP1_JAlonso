    private static void EJ1(int v1, int v2)
    {
        int suma = v1 + v2;
        Console.WriteLine("La suma de ambos valores es: " + suma);
    }

    private static void EJ2(string cadena)
    {

        char[] charArray = new char[8];

        int x = 0;

        foreach (char c in cadena) {
            {
                charArray[x] = c;
                x++;
            }
        }

        for (int i = 0; i < 4; i++)
        {
            Console.WriteLine("Los primeros 4 carateres: " + charArray[i]);
        }

        for (int i = 4; i < 8; i++)
        {
            Console.WriteLine("Los ultimos 4 carateres: " + charArray[i]);
        }

    }

    private static void EJ3()
    {
        Console.WriteLine("Fecha y Hora Actual: " + DateTime.Now);
    }

    private static void EJ1y2ENUM()
    { }
      
