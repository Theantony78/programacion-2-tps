    private static void EJ1Conv()
    {
        string s1 = "0";
        string s2 = "1";
        string s3 = "true";
        string s4 = "false";

        //Console.WriteLine(bool.Parse(s1));  //
        //Console.WriteLine(bool.Parse(s2));  //
        Console.WriteLine(bool.Parse(s3));
        Console.WriteLine(bool.Parse(s4));
        
        Console.WriteLine(bool.TryParse(s1, out _));
        Console.WriteLine(bool.TryParse(s2, out _));
        Console.WriteLine(bool.TryParse(s3, out _));
        Console.WriteLine(bool.TryParse(s4, out _));
        
        //Console.WriteLine(Convert.ToBoolean(s1));   //
       // Console.WriteLine(Convert.ToBoolean(s2));   //
        Console.WriteLine(Convert.ToBoolean(s3));
        Console.WriteLine(Convert.ToBoolean(s4));

    }

    private static void EJ2Conv()
    {
        int a = (int)344.4;     //  --> Solo almacena en a la parte entera de 344.4. Se produce perdida de datos.
        Console.WriteLine(a);
        
        decimal b = 10;         //  --> Solo almacena la parte entera, dado que no hay decimales en b. No se produce perdida de datos.
        Console.WriteLine(b);
        
        int c = 443444;         //  --> Solo almacena el entero 443444 completo en b. No se produce perdida de datos.
        Console.WriteLine(c);

        short d = (short)a;     //  --> Solo almacena en a la parte entera de 344.4 dado que short representa a enteros de 16bits. Se produce perdida de datos.
        Console.WriteLine(d);
       
    }

    private static void EJ3Conv(string miColor)
    {
        switch (miColor)
        {
            case "Blanco":
                Console.WriteLine("Blanco");
            break;
            
            case "Azul":
                Console.WriteLine("Azul");
            break;
            
            case "Negro":
                Console.WriteLine("Negro");
            break;
            
            default:
                Console.WriteLine("No esta el Color buscado!");
            break;
        }

    }

    private static void EJ4_5Conv()
    {
        int a = 15;

        if (a > 10)
        {
            Console.WriteLine("a es mayor a 10!");
        }  
        else
        {
            Console.WriteLine("error!");
        }

    }

    private static void EJ7Conv()
    {
        int a = 0;

        while (a <= 50)
        {
            a = a + 5;
        }
      
    }

}
